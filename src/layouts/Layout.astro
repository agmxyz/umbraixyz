---
import "../styles/global.css";
import Hamburger from "../components/Hamburger.astro";
import Navigation from "../components/Navigation.astro";

export interface Props {
  title: string;
  description?: string;
  image?: string;
  canonical?: string;
}

const {
  title,
  description = "On-device AI privacy protection for EU businesses. Prevent inadvertent data disclosure to LLMs with GDPR-compliant anonymization before data leaves your machine.",
  image = "/og-image.svg",
  canonical,
} = Astro.props;

const currentUrl = canonical || Astro.url.href;
const siteName = "umbrai";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="AI privacy, GDPR compliance, data anonymization, EU businesses, LLM privacy, on-device security, privacy protection"
    />
    <meta name="author" content="Umbrai" />
    <meta name="robots" content="index, follow" />

    <!-- Canonical URL -->
    {canonical && <link rel="canonical" href={canonical} />}

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={currentUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />

    <!-- Favicons -->
    <link
      rel="icon"
      href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 32 32'><circle cx='16' cy='16' r='12' stroke='%23000' stroke-width='1.5' fill='none'/><circle cx='16' cy='16' r='2' fill='%23D9EAFD'/></svg>"
    />
    <link
      rel="shortcut icon"
      href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 32 32'><circle cx='16' cy='16' r='12' stroke='%23000' stroke-width='1.5' fill='none'/><circle cx='16' cy='16' r='2' fill='%23D9EAFD'/></svg>"
    />

    <!-- Web App Manifest -->
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#F2F2F2" />

    <!-- Preconnect for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Preload critical assets -->
    <link rel="preload" href="/logo.svg" as="image" type="image/svg+xml" />
    <link
      rel="preload"
      href="/half-circle.svg"
      as="image"
      type="image/svg+xml"
    />

    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "SoftwareApplication",
        "name": "umbrai",
        "description": "On-device AI privacy protection for EU businesses. Prevent inadvertent data disclosure to LLMs with GDPR-compliant anonymization.",
        "url": "https://umbrai.xyz",
        "applicationCategory": "SecurityApplication",
        "operatingSystem": "Cross-platform",
        "offers": {
          "@type": "Offer",
          "price": "0",
          "priceCurrency": "EUR"
        },
        "creator": {
          "@type": "Organization",
          "name": "umbrai",
          "url": "https://umbrai.xyz"
        }
      }
    </script>
  </head>
  <body class="font-sans" style="background-color: #F2F2F2;">
    <!-- Navigation -->
    <nav
      class="nav fixed top-0 left-0 right-0 z-50 border-b border-black/10"
      style="background-color: #F2F2F2;"
    >
      <div class="max-w-6xl mx-auto px-6">
        <div class="flex justify-between items-center py-4">
          <div>
            <a
              href="/"
              class="flex items-center hover:opacity-70 transition-opacity"
            >
              <img src="/logo.svg" alt="umbrai" class="h-8" loading="eager" />
            </a>
          </div>

          <Navigation />
          <Hamburger />
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="pt-20 md:pt-24">
      <slot />
    </main>

    <script>
      import "../scripts/menu.js";
    </script>
  </body>
</html>

<style>
  html {
    font-family: "Inter", system-ui, sans-serif;
  }
</style>
